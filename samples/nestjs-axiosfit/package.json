{
  "name": "nestjs-axiosfit",
  "version": "0.0.1",
  "author": "David LÃ³pez <davidlopez.david@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "build:prod": "npm run prebuild && nest build --path tsconfig.build.prod.json",
    "clean": "rm -rf dist",
    "clean:all": "rm -rf node_modules dist package-lock.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "concurrently -n database,server \"json-server --watch db/database.json\" \"nest start\"",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "npm run build:prod && concurrently -n database,server \"json-server --watch db/database.json\" \"ts-node -r tsconfig-paths/register dist/main.js\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "concurrently -n database,test \"json-server --watch db/database.json\" \"jest\"",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.9.0",
    "@nestjs/core": "^6.9.0",
    "@nestjs/platform-express": "^6.9.0",
    "@yggdrasilts/axiosfit": "^0.4.4",
    "dotenv": "^8.2.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.11.3",
    "@nestjs/schematics": "^6.7.0",
    "@nestjs/testing": "^6.9.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.22",
    "@types/node": "^12.12.7",
    "@types/supertest": "^2.0.8",
    "concurrently": "^5.0.0",
    "jest": "^24.9.0",
    "json-server": "^0.15.1",
    "prettier": "^1.19.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
